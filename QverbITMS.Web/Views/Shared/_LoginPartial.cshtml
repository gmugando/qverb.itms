@if (Request.IsAuthenticated)
{
    <li class="dropdown user user-menu">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="glyphicon glyphicon-user"></i>
            <span>@User.Identity.Name <i class="caret"></i></span>
        </a>
        <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header bg-light-blue">
                <img src="@Url.Content("~/images/avatar3.png")" class="img-circle" alt="User Image" />
                <p>
                    @User.Identity.Name
                    <small>Member since @DateTime.Now.ToString("MM. yyyy")</small>
                </p>
            </li>
            <!-- Menu Body -->
            <li class="user-body">
                <div class="col-xs-4 text-center">
                    <a href="#">Password</a>
                </div>
                <div class="col-xs-4 text-center">
                    <a href="#">Profile</a>
                </div>
                <div class="col-xs-4 text-center">
                    <a href="#">Messages</a>
                </div>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
                <div class="pull-left">
                    <a href="#" class="btn btn-default btn-flat">Profile</a>
                </div>
                <div class="pull-right">
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <a class="btn btn-default btn-flat" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                    }
                </div>
            </li>
        </ul>
    </li>
}
else
{
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="glyphicon glyphicon-user"></i>
        <span>Please login <i class="caret"></i></span>
    </a>
}